<div class="item">
    <div> Avatar URL</div>
    <div>
        <input 
            type="url" 
            name="avatar_url"
            placeholder="http://" 
            value= "{{member.avatar_url}}"
        >
    </div>
</div>

<div class="item">
    <div> Nombre</div>
    <div>
        <input 
            type="text" 
            name="name"
            value= "{{member.name}}" 
        >
    </div>
</div>

<div class="item">
    <div> Email</div>
    <input 
        type="email"
        name="email"
        value= "{{member.email}}"  
    >
</div>

<div class="item">
    <div> Fecha de Nacimiento</div>
    <input 
        type="date"
        name="birth"
        value= "{{member.birth}}"  
    >
</div>

<div class="item">
    <div>Sexo</div>
    <span> 
        <input type="radio"
            name="gender" 
            value="M"
            {% if member.gender =='M' %} 
                checked
            {% endif %}> Masculino
    </span>
    
    <span> 
        <input 
            type="radio"
            name="gender"
            value="F"
            {% if member.gender =='F' %} 
                checked
            {% endif %}> Femenino
    </span>
    
</div>

<div class="item">
    <div>Tipaje Sangu√≠neo</div>
    <div>
        <select name="blood">
            <option value="A+" >
                  A+
            </option>

            <option value="A-"{%if member.blood== "A-"%}selected{%endif%}>
                  A-
            </option>

            <option value="B+"{%if member.blood== "B+"%}selected{%endif%}>
                  B+
            </option>

            <option value="B-"{%if member.blood== "B-"%}selected{%endif%}>
                  B-
            </option>

            <option value="AB+"{%if member.blood== "AB+"%}selected{%endif%}>
                  AB+
            </option>

            <option value="AB-"{%if member.blood== "AB-"%}selected{%endif%}>
                  AB-
            </option>

            <option value="O+"{%if member.blood== "O+"%}selected{%endif%}>
                  O+
            </option>

            <option value="O-"{%if member.blood== "O-"%}selected{%endif%}>
                  O-
            </option>

        </select>
    </div>

<div class="item">
    <div> Peso (kg)</div>
    <input 
        type="number"
        name="weight"
        value= "{{member.weight}}"  
    >
</div>

<div class="item">
    <div> Altura (cm)</div>
    <input 
        type="number"
        name="height"
        value= "{{member.height}}"  
    >
</div>

<div class="item">
    <div>Instructor</div>
    <div>
        <select name="instructor">

            {%for instructor in instructorOptions%}
            <option value="{{instructor.id}}" {{"selected" if member.instructor_id == instructor.id}}>
                {{instructor.name}}
            </option>
            {%endfor%}

        </select>
    </div>

<button type="submit">Guardar</button>